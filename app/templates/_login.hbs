<button class='btn btn-default navbar-btn navbar-right' data-toggle='modal' data-target='#login' type='button'>Sign in</button>

<div class='modal fade' id='login' tabindex='-1' role='dialog' aria-labelledby='loginLabel' aria-hidden='true'>
	<div class='modal-dialog modal-sm'>
		<div class='modal-content'>
			<form role='form' {{action login on='submit'}}>
				<div class='modal-header'>
					<button type='button' class='close' data-dismiss='modal'><span aria-hidden='true'>&times;</span><span class='sr-only'>Close</span></button>
					<h4 class='modal-title' id='loginLabel'>Login</h4>
				</div>
				<div class='modal-body'>
					<div class='form-group'>
						<label class='sr-only' for='inputIdl'>Username or Email</label>
						{{input id='inputId' type='text' class='form-control' value=userId placeholder='Username or Email'}}
					</div>
					<div class='form-group'>
						<label class='sr-only' for='inputPassword'>Password</label>
						{{input id='inputPassword' type='password' value=password class='form-control' placeholder='Password'}}
					</div>
						{{#if errorMessage}}
						<div class='alert alert-error'>{{errorMessage}}</div>
						{{/if}}
				</div>
				<div class='modal-footer'>
					<button type='button' class='btn btn-info'>Sign up</button>
					<button type='submit' class='btn btn-primary'>Login</button>
				</div>
			</form>
		</div>
	</div>
</div>
