<li class='col-md-4'>
	<div class='thumbnail'>
		<img {{bind-attr src=url alt=alt}} />
	</div>
	<div class='caption'>
		<h3 class='name-me'>{{name}}</h3>
		<p>{{description}}</p>
		<div class='row no-gutter'>
			<div class='col-xs-offset-6 col-xs-3'>
				<!-- <button {{action 'increaseAmount' 'up'}}>up<button> -->
				<div class='input-group'>
					{{input type='number' class='form-control' value=amount step='1'}}
					{{button-spinner action='increaseAmount'}}
				</div>
			</div>
			<div class='col-xs-3'>
				<button class='btn btn-primary'>Buy</button>
			</div>
		</div>
	</div>
</li>
